@model RegisterViewModel
@{
    Layout = "_Session";
    ViewData["Title"] = "Register";
}

<div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
        <form asp-controller="Account" asp-action="Register" method="post" class="form-horizontal" role="form" class="form-layout">
            <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
                <p class="text-center mb30">Register a new membership</p>

                <div class="form-inputs">

                <input asp-for="Email" placeholder="Email" type="email" class="form-control input-lg" />
                <span asp-validation-for="Email" class="text-danger"></span>
                <input asp-for="Password" placeholder="Password" type="password" class="form-control input-lg" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <input asp-for="ConfirmPassword" placeholder="Retype password" type="password" class="form-control input-lg" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button class="btn btn-success btn-block btn-lg mb15" type="submit">Create Account</button>

                <p>
        <a asp-action="Login" class="text-center">I already have a membership</a>
                </p>

              </form>
            </div>



@section styles {
}

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
