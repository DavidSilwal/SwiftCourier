@model RegisterViewModel
@{
    Layout = "_Basic";
    ViewData["Title"] = "Register";
    ViewData["BodyClass"] = "register-page";
}

<div class="register-box">
    <div class="register-box-body">
        <p class="login-box-msg">Register a new membership</p>
        <form asp-controller="Account" asp-action="Register" method="post" class="form-horizontal" role="form">
            <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
            <div class="form-group has-feedback">
                <input asp-for="Email" placeholder="Email" type="email" class="form-control" />
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group has-feedback">
                <input asp-for="Password" placeholder="Password" type="password" class="form-control" />
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group has-feedback">
                <input asp-for="ConfirmPassword" placeholder="Retype password" type="password" class="form-control" />
                <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="row">
                <button type="submit" class="btn btn-primary btn-block btn-flat">Register</button>
            </div>
        </form>
        <a asp-action="Login" class="text-center">I already have a membership</a>
    </div>
    <!-- /.form-box -->
</div>
<!-- /.register-box -->


@section styles {
    <!-- iCheck -->
    <link rel="stylesheet" href="~/plugins/iCheck/square/blue.css">
}

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <!-- iCheck -->
    <script src="~/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
}
