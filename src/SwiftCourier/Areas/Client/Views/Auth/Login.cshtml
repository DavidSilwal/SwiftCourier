@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel

@{
    Layout = "_Auth";
    ViewData["Title"] = "Log in";
}


<div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
    <form asp-controller="Auth" asp-action="Login" asp-area="Client" method="post" role="form" class="form-layout">
        <p class="text-center mb30">Please sign in to your account</p>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-inputs">
            <input asp-for="Username" placeholder="Username" class="form-control input-lg" />
            <span asp-validation-for="Username" class="text-danger"></span>
            <input asp-for="Password" placeholder="Password" type="password" class="form-control input-lg" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button class="btn btn-success btn-block btn-lg mb15" type="submit">
            <span>Sign in</span>
        </button>
    </form>
</div>

@section styles {
}

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}